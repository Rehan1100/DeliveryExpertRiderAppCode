<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="drawerArrowStyle">@style/DrawerHamburgerStyle</item>
        <item name="searchViewStyle">@style/AppSearchView</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerHamburgerStyle</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">

        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/lightgreen</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/red</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/red</item>
    </style>


    <style name="AppTheme.Toolbar" parent="AppTheme">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/black</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/black</item>
        <item name="searchViewStyle">@style/AppSearchView</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="DrawerHamburgerStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>


    <style name="AppSearchView" parent="Widget.AppCompat.SearchView.ActionBar" >
        <!-- Text Size -->
        <item name="android:textSize">15dp</item>
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/grey_user_panel_text</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/black</item>
    </style>


